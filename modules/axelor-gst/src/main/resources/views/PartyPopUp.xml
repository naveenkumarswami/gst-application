<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">


  <form name="invoice-form-popup-party" model="com.axelor.gst.db.Invoice" title="Generate Party">
    <panel aname="mainPanel">
      <field name="partyName" type="many-to-one" x-target="com.axelor.gst.db.Party"
        x-target-name="name" />
    </panel>
    <panel sidebar="true">
      <button name="createInvoice" title="Create Invoice" onClick="create-selected-invoice-on-click,action-view-invoice-select-product" />
    </panel>
  </form>

  <action-method name="create-selected-invoice-on-click">
    <call class="com.axelor.gst.web.ProductController" method="getSelectedProduct" />
  </action-method>

  <action-view name="action-view-invoice-select-product" title="Invoice"
    model="com.axelor.gst.db.Invoice">
    <view type="form" name="invoice-form" />
    <context name="selectedIds" expr="eval: totalSelectedProduct" />
    <context name="party_name" expr="eval: partyName" />
  </action-view>

  <action-attrs name="action-for-set-the-selected-ids">
    <attribute name="value" for="productIds" expr="eval: _showRecord" />
  </action-attrs>

</object-views>
<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

  <grid model="com.axelor.gst.db.Company" title="Company" name="company-grid">
    <field name="name" title="Name"></field>
    <field name="gstin" title="GSTIN" min="15" max="15"></field>
  </grid>

  <selection name="type-selection">
    <option value="Primary">Primary</option>
    <option value="Secondary">Secondary</option>
    <option value="Others">Others</option>
  </selection>


  <form model="com.axelor.gst.db.Company" title="Company" name="company-form">
    <panel title="Company">
      <field name="name" title="Name"></field>
      <field name="logo" title="Logo" widget="image"></field>
      <panel title="Contacts" colSpan="12">
        <field name="contact" title="Contacts">
          <viewer><![CDATA[
        <contact>
        {{record.name}} {{record.email}}<br>
        {{record.phone}}
        </contact>
        ]]>
        </viewer>
          <editor layout="table" x-show-titles="false">
            <field name="name" colSpan="8"/>
            <field name="Type" width="100px" selection="type-selection" />
            <field name="email" css="border-left-none" colSpan="4" />
            <field name="Type" width="100px" selection="type-selection" />
            <field name="phone" css="border-left-none" colSpan="4" />
          </editor>
        </field>
      </panel>
    <field name="gstin" title="GSTIN"></field>
    <field name="bankDetails" title="Bank Details" form-view="bankDetails-form"></field>
    <field name="address" title="Address" form-view="address-form"></field>
  
    </panel>
  </form>

</object-views>
  
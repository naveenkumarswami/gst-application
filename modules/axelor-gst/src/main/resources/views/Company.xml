<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

  <grid model="com.axelor.gst.db.Company" title="Company" name="company-grid">
    <field name="name" title="Name"></field>
    <field name="gstin" title="GSTIN" min="15" max="15"></field>
  </grid>

  <form model="com.axelor.gst.db.Company" title="Company" name="company-form">
    <panel title="Company">
      <field name="name" title="Name"></field>
      <field name="logo" title="Logo" widget="image"></field>
      <panel title="Contacts">
        <field name="contact" title="Contacts">
           <viewer><![CDATA[
        <contact>
        {{record.name}} {{record.email}}<br>
        {{record.phone}}
        </contact>
        ]]>
        </viewer>
          <editor layout="table" x-show-titles="false">
            <field name="email" />
            <field name="primary" widget="toggle" x-icon="fa-star-o" x-icon-active="fa-star"
              x-exclusive="true" />
            <field name="optOut" widget="toggle" x-icon="fa-ban" />
            <field name="invalid" widget="toggle" x-icon="fa-exclamation-circle" />
          </editor>

        </field>
      </panel>
    </panel>
  </form>

</object-views>
  